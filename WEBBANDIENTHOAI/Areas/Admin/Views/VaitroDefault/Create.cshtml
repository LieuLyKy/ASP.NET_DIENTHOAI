@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole
@{
    ViewBag.Title = "Thêm phân quyền mới";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm Phân Quyền Mới</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "VaitroDefault", FormMethod.Post))
            {
                // Tôi đang sử dụng xác thực phía máy khách và tôi muốn thông báo bên dưới chỉ hiển thị khi tôi gặp lỗi. Tôi đang cố gắng sử dụng đây là một lỗi chung trong trường hợp bất kỳ trường nào không hợp lệ.
                //Hiện tại" biểu thị trường bắt buộc luôn hiển thị ngay cả trước khi xác thực.
                @Html.ValidationSummary(false)
                //Html.AntiForgeryToken()là một phương thức tĩnh tạo mã thông báo được thêm vào html và cookie phản hồi.
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Tên quyền</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
