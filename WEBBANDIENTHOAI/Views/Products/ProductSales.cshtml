@model IEnumerable<WEBBANDIENTHOAI.Models.MFC.Product>




@if (Model != null && Model.Any())
{
    <div class="row no-gutters items-wrap">
        @foreach (var item in Model.Where(n => n.ProductCategoryId == 1).Take(3))
        {
            var strImge = "";
            var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
            if (img != null)
            {
                strImge = img.Image;
            }
            <div class="col-md col-6">
                <figure class="card-product-grid card-sm">
                    @*<a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="img-wrap">*@
                    @*<img src="~/Content/images/@item.Avartar">*@
                    <div class="product_image">
                        <a href="/chi-tiet/@item.Alias-p@(item.Id)"><img src="@strImge" alt="@item.Title"></a>
                    </div>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span style=" color: #fff; background-color: #fa3434; border-radius:10px">Sale</span></div>
                    }
                    else
                    {
                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span style=" color: #fff; background-color: #fa3434; border-radius:10px">Hot!!</span></div>
                    }



                    <div class="product_info">
                        <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                        @if (item.PriceSale > 0)
                        {
                            <div class="product_price">@String.Format("{0:0,0}", @item.PriceSale) VNĐ</div>

                        }
                        else
                        {
                            <div class="product_price">@String.Format("{0:0,0}", @item.Price) VNĐ</div>
                        }
                    </div>
                    <a href="#" class="btn  btn-primary">
                            <i class="fas fa-shopping-cart"></i> <span  class="btnAddToCart" data-id="@item.Id">Add to cart</span>
                        </a>
                    @*<div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>*@

                </figure>
            </div> <!-- col.// -->

        }
    </div>

}


